@model FitnessApplication.Models.SignUp

@{
    ViewData["Title"] = "Signup";
}

<style>
    *, *:before, *:after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        background-color: #aeafb6;
        font-family: 'Poppins', sans-serif;
    }

    .background {
        width: 400px;
        height: 480px; 
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
        z-index: -1;
    }
    .background .shape {
        height: 180px;
        width: 180px;
        position: absolute;
        border-radius: 50%;
        }

    .shape:first-child {
        background: linear-gradient(#1845ad, #23a2f6);
        left: -70px;
        top: -70px;
    }

    .shape:last-child {
        background: linear-gradient(to right, #ff512f, #f09819);
        right: -25px;
        bottom: -70px;
    }

    form {
        width: 400px; 
        background-color: rgba(255,255,255,0.13);
        position: absolute;
        transform: translate(-50%, -50%);
        top: 50%;
        left: 50%;
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255,255,255,0.1);
        box-shadow: 0 0 40px rgba(8,7,16,0.6);
        padding: 20px 15px; 
    }
    form * {
        font-family: 'Poppins', sans-serif;
        color: #ffffff;
        letter-spacing: 0.5px;
        outline: none;
        border: none;
    }
    form h3 {
        font-size: 28px; 
        font-weight: 500;
        line-height: 36px;
        text-align: center;
        margin-bottom: 10px;
    }

    form h4 {
        font-size: 20px;
        font-weight: 500;
        line-height: 28px;
        text-align: center;
        margin-bottom: 10px;
        }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px; 
    }

    .full-width {
        grid-column: 1 / -1;
    }

    .form-group {
        margin-top: 10px;
    }

    label {
        display: block;
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 3px;
    }

    input {
        display: block;
        height: 35px; 
        width: 100%;
        background-color: rgba(255,255,255,0.07);
        border-radius: 3px;
        padding: 0 8px;
        font-size: 13px; 
        font-weight: 300;
    }
    .btn-primary,button {
        margin-top: 20px;
        width: 100%;
        background-color: #ffffff;
        color: #080710;
        padding: 10px 0;
        font-size: 16px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
        border: none;
    }

    .signup-link {
        text-align: center;
        margin-top: 15px;
    }

    .signup-link a {
        color: #ffffff;
        text-decoration: underline;
        }
</style>

<div class="background">
    <div class="shape"></div>
    <div class="shape"></div>
</div>

<form asp-action="Signup" method="post">
    <h3>Ready to start your journey?</h3>
    <h4>Sign up and start today</h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewBag.Message != null)
    {
        <div class="form-group full-width" style="color: green;">@ViewBag.Message</div>
    }
    <div class="form-grid">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group full-width">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign up" class="btn btn-primary" />
    </div>
    <div class="signup-link">
        Already have an account? <a asp-action="Login">Go to Login</a>
    </div>
</form>


