@if (Context.User.Identity.Name != null){
	<form asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right">
		<ul class="nav navbar-nav navbar-right">
			<li>Hello @Context.User.Identity.Name!</li>
			<li>
				<button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
			</li>
		</ul>
	</form>
}
else{
	<ul class="nav navbar-nav navbar-right">
		<li><a class="nav-link text-dark" asp-controller="Account" asp-action="Signup">Sign Up</a></li>
		<li><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Log In</a></li>

	</ul>
}
@if (User.IsInRole("Admin"))
{
	<ul class="nav navbar-nav navbar-right">
	<li class="nav-item">
		<a class="nav-link" asp-controller="Workout" asp-action="Create">Add Workout</a>
	</li>
	</ul>
}