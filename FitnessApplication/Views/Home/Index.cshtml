
@{
    ViewData["Title"] = "Welcome to Your Fitness Journey!";
}

<section class="hero">
    <div class="hero-content">
        <h1>It's Time to Regain Your Fitness</h1>
        <p>Do fitness anywhere and anytime with our training videos.</p>
        <a asp-controller="Account" asp-action="SignUp" class="btn btn-primary">Get Started</a>
        <a asp-controller="Workout" asp-action="Index" class="btn btn-outline">Explore Workouts</a>
    </div>
    <div class="hero-image">
        <img src="/images/fitness-hero.png" alt="Fitness Illustration">
    </div>
</section>

<section class="features">
    <h2>Why Choose Us?</h2>
    <div class="feature-grid">
        <div class="feature">
            <h3>Daily Workouts</h3>
            <p>Get personalized workouts.</p>
            <img src="/images/persoanlize.png" alt="Fitness Illustration" />
        </div>
        <div class="feature">
            <h3>Access Anywhere</h3>
            <p>Train from home or the gym.</p>
            <img src="/images/anywhere.jpg" alt="Fitness Illustration" />
        </div>
        <div class="feature">
            <h3>Community Support</h3>
            <p>Join a fitness community that helps you stay motivated.</p>
            <img src="/images/community.jpg" alt="Community Illustration" />
        </div>
    </div>
</section>

<section class="workouts">
    <h2>Popular Workouts</h2>
    @if (ViewBag.FeaturedWorkouts != null){
        <div class="workout-grid">
        @foreach (var workout in ViewBag.FeaturedWorkouts)
        {
            <div class="workout-card">
                <img src="@workout.ThumbnailUrl" alt="@workout.WorkoutName">
                <h3>@workout.WorkoutName</h3>
                <p>@workout.Description</p>
                <a asp-controller="Workout" asp-action="Gallery" class="btn btn-info">View Workout</a>
            </div>
        }
        </div>
    }
    else{
        <p>No featured workouts available.</p>
    }
</section>

<section class="cta">
    <h2>Start Your Fitness Journey Today</h2>
    <p>Sign up now and get access to free workouts and progress tracking!</p>
    <a asp-controller="Account" asp-action="SignUp" class="btn btn-primary">Sign Up for Free</a>
</section>
<style>
