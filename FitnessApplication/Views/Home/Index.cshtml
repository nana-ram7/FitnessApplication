    display: flex;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(to right, #1e3c72, #2a5298);
    color: white;
    padding: 60px;
}

.hero-content {
    max-width: 50%;
}

.hero h1 {
    font-size: 3rem;
}

.hero p {
    font-size: 1.2rem;
    margin-bottom: 20px;
}

.btn {
    padding: 12px 20px;
    font-size: 1rem;
    text-decoration: none;
    border-radius: 5px;
    display: inline-block;
    margin-right: 10px;
}

.btn-primary {
    background: #ff4d6d;
    color: white;
}

.btn-outline {
    border: 2px solid white;
    color: white;
}

.features {
    text-align: center;
    padding: 40px 20px;
}

.feature-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
}

.feature {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    text-align: center;
    width: 250px;
    height: 300px; 
    display: flex; 
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.feature img {
    width: 150px;
    height: 150px;
    margin: 10px;
}
.feature h3{
    font-size: 1.3rem;
    margin-bottom: 8px;
}
.feature p{
    font-size: 1 rem;
    margin: 0;
}

.workouts {
    text-align: center;
    padding: 50px;
}

.workout-grid {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.workout-card {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

.workout-card img {
    width: 100%;
    border-radius: 10px;
}

.cta {
    text-align: center;
    background: #ff4d6d;
    color: white;
    padding: 40px;
}
</style>